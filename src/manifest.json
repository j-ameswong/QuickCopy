{
  "manifest_version": 3,
  "name": "Quick Copy Image",
  "version": "1.1",
  "permissions": ["clipboardWrite", "activeTab", "storage"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "quickcopy@j-ameswong.github.com"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
